{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "lib": ["ES2015", "DOM"],
    "types": [
      "node",
      "@types/react-native",
      "@react-native-async-storage/async-storage",
      "@react-native-community/netinfo",
      "zustand"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
